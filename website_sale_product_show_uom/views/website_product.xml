<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="product_show_uom" name="Show UoM" inherit_id="website_sale.product_price" active="False" customize_show="True">
        <xpath expr="//b[hasclass('oe_price')]" position="after">
            <span>/</span>
            <span t-field="product.uom_id.name" style="white-space: nowrap;" />
        </xpath>
    </template>

    <template id="product_show_uom_list" name="Show UoM" inherit_id="website_sale.products_item" active="False" customize_show="True">
        <xpath expr="//div[hasclass('product_price')]" position="inside">
            <span>/</span>
            <span t-field="product.uom_id.name" style="white-space: nowrap;" />
        </xpath>
    </template>

    <template id="product_show_uom_checkout" name="Show UoM" inherit_id="website_sale.cart_lines" active="False" customize_show="True">
        <xpath expr="//table[@id='cart_products']/thead/tr[1]/th[hasclass('td-qty')]" position="after">
            <th class="text-center td-uom">Units</th>
        </xpath>
        <xpath expr="//table[@id='cart_products']/tbody/t[@t-as='line']/tr[1]/td[hasclass('td-qty')]" position="after">
            <td class="text-center td-uom">
                <span t-field="line.product_id.uom_id.name" />
            </td>
        </xpath>
    </template>

    <template id="product_show_uom_payment" name="Show UoM" inherit_id="website_sale.cart_summary" active="False" customize_show="True">
        <xpath expr="//table[@id='cart_products']/thead/tr[1]/th[hasclass('td-qty')]" position="replace">
            <th class="td-qty" colspan="2">Quantity</th>
        </xpath>
        <xpath expr="//table[@id='cart_products']/tbody/tr[@t-as='line']/td[hasclass('td-qty')]" position="after">
            <td class="text-center td-uom">
                <span t-field="line.product_id.uom_id.name" />
            </td>
        </xpath>
    </template>

</odoo>
